<!doctype html>
<html lang="es">

<!-- head -->
<%- include('./partials/head.ejs') %>

    <body>

        <!-- h e a d e r -->
        <%- include('./partials/header.ejs') %>

            <main>


                <section class="container">
                    <h3 class="font-weight-bold">Acceso</h3>
                    <form>

                        <!-- Grupo: Correo electronico -->
                        <div class="form-group mb-3">
                            <label for="correo" class="font-weight-bold">Correo electrónico </label>
                            <input type="email" name="correo" class="form-control"
                                placeholder="Ingresa tu correo electrónico" id="correo">
                            <span> </span>
                        </div>

                        <!-- Grupo: Contraseña -->
                        <div class="form-group mb-3">
                            <label for="contraseña" class="font-weight-bold">Contraseña </label>
                            <input type="password" name="password" class="form-control" placeholder="Tu contraseña"
                                id="password">
                            <span> </span>
                        </div>

                        <!-- RECORDAR USUARIO -->
                        <div class="form-check mb-3">
                            <input type="checkbox" name="flexCheckChecked" class="form-check-input" value=""
                                id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">
                                Recuerdame
                            </label>
                        </div>

                        <!-- LOGIN  -->
                        <div class="mb-3">

                            <button class="btn btn-primary btn-sm">Iniciar</button>

                        </div>

                        <!-- ENLACE A RESTABLECER CONTRASEÑA-->

                        <div class="mb-3 text-center">
                            <a href="#" target="_blank">Olvidé mi contraseña</a>
                        </div>

                        <!-- ENLACE A REGISTRO-->

                        <div class="form-group mb-3 c text-center">
                            <p>¿No tienes cuenta? <a href="/users/register" target="_blank">Registrate</a> </p>
                        </div>

                        <!-- BOTON FACEBOOK-->

                        <div class="facebook mb-3">
                            <button class="btn btn-primary btn-sm btn-block">Iniciar sesión con Facebook</button>
                        </div>

                        <!-- BOTON GOOGLE -->

                        <div class="google mb-3">
                            <button class="btn btn-primary btn-sm btn-block">Iniciar sesión con Google</button>
                        </div>

                    </form>

                </section>



            </main>



           <!-- Footer -->
   <%- include('./partials/footer.ejs') %>



            <!-- Option 1: Bootstrap Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>




    </body>

</html>