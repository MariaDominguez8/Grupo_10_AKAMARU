<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

  <body>

    <%- include('./partials/header') %>

      <section class="container">
        <div class="formulario mt-5">
          <h2>Editar <%= producto.name %>
          </h2>
          <form action="/products/edit/<%=producto.id %>?_method=PUT" method="POST">
            <div class="mb-3">
              <label for="formGroupExampleInput" class="form-label"> Nombre </label>
              <input type="text" class="form-control" id="formGroupExampleInput" name="name"
                value="<%= producto.name %>">
            </div>
            <div class="text-center">
              <img src="/images/<%= producto.imagenes[0].name %> " alt="">
            </div>
            <div class="mb-3">
              <label for="floatingTextarea">Descripción</label>
              <textarea class="form-control" id="floatingTextarea"
                name="description"><%= producto.description %> </textarea>
            </div>
            <div class="mb-3 categorias">
              <label for="category" class="form-label">Categoría</label>
              <select name="category" id="category" >
              <option value="accesorios">Accesorios</option>
              <option value="cartucheras">Cartucheras</option>
              <option value="figuras">Figuras</option>
              <option value="mangas">Mangas</option>
              <option value="mochilas">Mochilas y Bolsos</option>
              <option value="tazas">Tazas</option>
            </select>
              </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label">Precio</label>
              <input type="text" class="form-control" id="formGroupExampleInput2" name="price" value="<%=producto.price%>">
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label">stock</label>
              <input type="text" class="form-control" id="formGroupExampleInput2" name="stock" value="<%=producto.stock%>">
            </div>
            <div class="mb-3">
              <label for="formGroupExampleInput2" class="form-label">Cuotas</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" name="cuotas" value="<%= producto.cuotas %>">
            </div>
            <button class="btn btn-primary" type="submit">Guardar</button>
            </form>

        </div>
      </section>

      <!-- Footer -->
      <%- include('./partials/footer.ejs') %>

  </body>

</html>